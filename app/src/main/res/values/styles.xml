<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimarySurface">@color/colorPrimarySurface</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorGray</item>
    </style>

    <style name="CustomToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">#ffffff</item>
        <item name="badgeTextColor">#ffffff</item>
        <item name="itemTextColor">#ffffff</item>
        <item name="itemFillColor">#ffffff</item>
        <item name="itemStrokeColor">#ffffff</item>
    </style>

    <style name="ErrorText" parent="AppTheme">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorControlNormal">#aaaaaa</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutAppearance.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorControlNormal">#aaaaaa</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>
